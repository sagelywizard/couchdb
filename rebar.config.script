MakeDep = fun({AppName, RepoName, Version, Options}) ->
    case AppName of
        couch ->
            Url = "git@github.com:sagelywizard/couchdb-couch.git",
            {AppName, ".*", {git, Url, {branch, "view-changes"}}, Options}; % TODO: remove before PR
        couch_replicator ->
            Url = "git@github.com:sagelywizard/couchdb-couch-replicator.git",
            {AppName, ".*", {git, Url, {branch, "view-changes"}}, Options};
        mem3 ->
            Url = "git@github.com:sagelywizard/couchdb-mem3.git",
            {AppName, ".*", {git, Url, {branch, "view-changes"}}, Options};
        couch_mrview ->
            Url = "git@github.com:sagelywizard/couchdb-couch-mrview.git",
            {AppName, ".*", {git, Url, {branch, "view-changes"}}, Options};
        _ ->
            Url = "https://git-wip-us.apache.org/repos/asf/" ++ RepoName ++ ".git",
            {AppName, ".*", {git, Url, Version}, Options}
    end
end,

